<% if @image.errors.any? %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <ul>
        <% @image.errors.full_messages.each do |err| %>
          <li><%= err %></li>
        <% end %>
      </ul>
  </div>
<% end %>

<div class='well'>
  <div class='title'>
    <h2>Image to Text Beta</h2>
  </div>
  </br>
<%= form_for @image do |i| %>
  <h6>(Max. Size: 10M, Only: jpg, jpeg, png, gif)</h6>
  <div>
    <%= i.file_field :attachment %> 
  </div>
  </br>
  <div>
    <%= select_tag 'language', options_from_collection_for_select(@languages, 'id', 'name') %> (make sure same with <i>Text Language</i> use at your image)
  </div>
  </br>
  <div>
    <%= recaptcha_tags %>
  </div>
  </br>
  <div>
    <%= i.submit 'Convert', class: 'btn btn-primary' %>
  </div>
<% end %>
  </br>
  <div class="jumbotron">
    <p>
      <%= @image_text %>
    </p>
  </div>

  <div class="message">
    <h4>Use high quality images to be more accurate. Thank you!</h4>
  </div>


  <div class="powered">
    <h6>Developed by <a href="https://papooa.com/" target="_blank">papooa.com</a></h4>
  </div>

  <div style="clear: both;"></div>
</div>

<% @title = 'ImageToText Papooa OCR' %>
